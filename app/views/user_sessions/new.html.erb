<% title "Login" %>

<div class="login grid7 clear">
  <h2><%= yield(:title) %></h2>

  <% form_for @user_session, :as => :user_session, :url => { :action => 'create' } do |f| %>
    <%= f.error_messages %><br class="clear" />
    <%= f.label :login %>
    <%= f.text_field :login %>   

    <%= f.label :password %>
    <%= f.password_field :password %><br class="clear" />

    <%= f.check_box :remember_me %><%= f.label :remember_me %>

    <%= link_to 'Forgot your password?', new_password_reset_path %><br class="clear" />

    <%= f.submit "Login" %>
  <% end %>
</div>