<% title "Edit My Account" %>
<div class="login grid7 clear">
<h2><%= yield(:title) %></h2>
 
  <% form_for @user, :url => account_path do |f| %>
    <%= f.error_messages %><br class="clear" />
    <%= render :partial => "form", :object => f %><br />
    
    <%= f.submit "Update" %>
  <% end %>
 
  <br /><%= link_to "My Profile", account_path %> 
</div> 